{% extends "base.twig" %}

{% block meta %}
    <meta name="description" content="">
{% endblock %}


{% block main %}
    <div class="categories">
        {% for categorie in categories | slice(0,4) %}
            <a class="category-btn" href="#">{{ categorie.name }}</a>
        {% endfor %}
        </div>
        <div class="title-articles">
            <h1>Tout les articles</h1>
        </div>
        <div class="articles mentions-articles">
            <div class="others">
                {% for article in articles %}
                    <div class="others-articles img">
                        <img src="{{ article.image }}" alt="">
                        <div class="info-article">
                            <h2 class="title">{{ article.title }}</h2>
                            <p class="content-articles">{{ article.chapo }}</p>
                            <a href="/article/{{article.id}}">En savoir plus</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>        
{% endblock %}
